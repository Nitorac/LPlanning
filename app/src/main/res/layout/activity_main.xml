<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendez ..."
        android:id="@+id/salle"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textColor="#ff0800ff"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendez ..."
        android:id="@+id/matiere"
        android:textSize="15sp"
        android:textColor="#ff3d3d3d"
        android:gravity="center"
        android:layout_below="@+id/salle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/salle"
        android:layout_alignEnd="@+id/salle" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:onClick="refreshClick"
        android:src="@drawable/ic_action_refresh"
        android:contentDescription="Refresh button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cours d&apos;aprÃ¨s :"
        android:id="@+id/nextText"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/matiere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendez ..."
        android:id="@+id/nextSalle"
        android:gravity="center"
        android:textColor="#ff0800ff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/nextText"
        android:layout_toRightOf="@+id/nextText"
        android:layout_toEndOf="@+id/nextText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendez ..."
        android:id="@+id/nextMatiere"
        android:textSize="15sp"
        android:textColor="#ff3d3d3d"
        android:gravity="center"
        android:layout_below="@+id/nextSalle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/matiere"
        android:layout_alignEnd="@+id/matiere" />

</RelativeLayout>
